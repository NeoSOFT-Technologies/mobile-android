<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueprintApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/poppings</item>
        <item name="android:fontFamily">@font/poppings</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunflower_yellow</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/marine_blue</item>
        <!-- Secondary brand color. -->
        <!--   <item name="colorSecondary">@color/teal_200</item>
           <item name="colorSecondaryVariant">@color/teal_700</item>
           <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="android:textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style name="Theme.BlueprintApplication.NoActionBar" parent="Theme.BlueprintApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlueprintApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlueprintApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/marine_blue</item>
    </style>
</resources>